<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="550dp">

            <Button
                android:id="@+id/buttonView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:layout_marginTop="197dp"
                android:layout_marginEnd="42dp"
                android:layout_toStartOf="@+id/editText6"
                android:text="Add Options"
                android:textColor="@color/white"
                app:layout_constraintVertical_bias="0.127"></Button>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_above="@+id/buttonView"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="-177dp"
                android:background="@drawable/borderofedittext"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Question"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:hint="Poll time in Minutes"

                android:inputType="numberDecimal"
                android:background="@drawable/borderofedittext"/>


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>